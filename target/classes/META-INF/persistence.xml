<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="Resto2I">
        <class>modele.Commande</class>
        <class>modele.Ticket</class>
        <class>modele.Facture</class>
        <class>modele.Item</class>
        <class>modele.Menu</class>
        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"></property>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/Resto2I"></property>
            <property name="jakarta.persistence.jdbc.user" value="root"></property>
            <property name="jakarta.persistence.jdbc.password" value=""></property>
            <property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create"></property>
            <property name="jakarta.persistence.schema-generation.scripts.action" value="drop-and-create"></property>
            <property name="jakarta.persistence.schema-generation.scripts.create-target" value="scriptCreate"></property>
            <property name="jakarta.persistence.schema-generation.scripts.drop-target" value="scriptDrop"></property>
        </properties>
    </persistence-unit>
</persistence>